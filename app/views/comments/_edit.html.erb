<div class="content">
  <div class="col-6">
    <div class = "card">
      <div class="card-body">
        <%= form_with(model: [post, comment], local: false) do |form| %>
          <% if comment.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
                <ul>
                  <% comment.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                </ul>
            </div>
          <% end %>
          <div class="field">
          <%= form.text_area :content, id: "comment_content_#{post.id}" %>
          <%= form.label :content %>
          </div>
          <div class="actions">
            <%= form.submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>