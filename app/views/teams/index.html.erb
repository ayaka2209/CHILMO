<h2><%= t('.look_team') %></h2>
  <table>
    <thead>
      <tr>
        <th><%= t('.team_name') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <th><%= team.name %></th>
          <th><%= link_to t('.show'), team_path(team) %></th>
          <th><%= link_to t('.edit'), edit_team_path(team) %></th>
          <th><%= link_to t('.delete'), team, method: :delete, data: { confirm: 'Are you sure?' } %></th>
          <th colspan="3"></th>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div class="button"><%= link_to t('.register_team'), new_team_path, class: "login" %>
  <%# <%= link_to t('.出席簿'), attendancebooks_path, class: "login" %>
</div>