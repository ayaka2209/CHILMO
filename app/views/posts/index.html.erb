<div class="contents-title text-center">
  <h1><%= t('.memo') %></h1>
</div>
<div class="user_info">
  <%= form_with(url: posts_path, scope: :post, method: :get, local: true) do |form| %>
    <%= form.label :検索 %>
    <%= form.text_field :title, placeholder: "クラス名で検索"%><br>
    <%= form.label :ステータス %>
    <%= form.select :status, Post.statuses.keys.to_a, include_blank: true %><br>
    <%= form.submit"検索" %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t('.day') %></th>
          <th><%= t('.name') %></th>
          <th><%= t('.title') %></th>
          <th><%= t('.status') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.start_time.strftime("%Y-%m-%d") %></td>
            <td><%= post.name %></td>
            <td><%= post.title %></td>
            <td><%= post.status %></td>
            <td><%= link_to t('.edit'), edit_post_path(post), class: "btn btn-outline-secondary" %></td>
            <td><%= link_to t('.show'), post_path(post), class: "btn btn-outline-secondary" %></td>
            <td><%= link_to t('.delete'), post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  <br>
</div>
<div class="contents-title text-center">
  <button type="button" class="btn btn-outline-light" style="background-color: #c5db97;">
    <%= link_to t('.register_memo'), new_post_path %>
  </button>
</div>

<style>
h1{
  color: rgba(0, 0, 0, 0.5);;
  margin-top: 0.5em;
}
.container{
  background-color: #fae8f7;;
}

a {
  color: #666; 
  }
</style>