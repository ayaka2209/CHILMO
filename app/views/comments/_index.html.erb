<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
          <%= comment.created_at.strftime("%Y-%m-%d %H:%M") %>
          <%= comment.content %>
          <%= link_to "コメント編集", edit_post_comment_path(post, comment), remote: true %>
          <%= link_to "コメント削除", post_comment_path(comment.post_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"} %>
        </div>
      </li>
    <% end %>
  <% end %>
</ul>